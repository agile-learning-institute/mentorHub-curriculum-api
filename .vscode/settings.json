{
    "python.testing.unittestEnabled": true,
    "python.testing.pytestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.unittestArgs": [
      "-v",
      "-s",
      "./test",  // Replace with your test directory
      "-p",
      "test_*.py"  // Pattern to match your test files
    ],
    "files.exclude": {
      "**/node_modules": true,
      "**/*.spec.js": true
    },
    "search.exclude": {
      "**/node_modules": true,
      "**/*.spec.js": true
    }
  }